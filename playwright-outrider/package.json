{
  "name": "playwright-outrider",
  "version": "1.3.0",
  "private": true,
  "main": "electron/main.cjs",
  "scripts": {
    "test": "npx playwright test",
    "test:ui": "npx playwright test tests/ui",
    "test:api": "npx playwright test tests/api",
    "test:combined": "npx playwright test tests/combined",
    "test:file": "npx playwright test",
    "report": "npx playwright show-report",
    "ui": "node ui-server.js",
    "start:ui": "node ui-server.js",
    "electron": "electron .",
    "electron:dev": "electron . --dev",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "devDependencies": {
    "@playwright/test": "^1.44.1",
    "@types/google-protobuf": "^3.15.12",
    "dotenv": "^16.4.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.0",
    "zod": "^3.22.4"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.6.2",
    "@bufbuild/protoc-gen-es": "^2.6.2",
    "@types/qs": "^6.14.0",
    "@types/uuid": "^10.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "google-protobuf": "^3.21.4",
    "protobufjs": "^7.5.3",
    "pulsar-client": "^1.14.0",
    "qs": "^6.14.0",
    "uuid": "^11.1.0"
  },
  "build": {
    "appId": "com.playwright.outrider",
    "productName": "Playwright Outrider",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "electron/**/*",
      "ui/**/*",
      "tests/**/*",
      "pages/**/*",
      "utils/**/*",
      "configs/**/*",
      "fixtures/**/*",
      "playwright.config.ts",
      "tsconfig.json",
      "package.json",
      "!node_modules/electron/dist",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": ["dmg"]
    },
    "win": {
      "target": ["nsis"]
    },
    "linux": {
      "target": ["AppImage"]
    }
  }
}
